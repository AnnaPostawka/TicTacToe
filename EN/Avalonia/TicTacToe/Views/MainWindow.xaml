<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TicTacToe.ViewModels;assembly=TicTacToe"
        xmlns:controls="clr-namespace:TicTacToe.Controls;assembly=TicTacToe"
        Icon="resm:TicTacToe.Assets.avalonia-logo.ico"
        Title="TicTacToe">

  <Design.DataContext>
    <vm:MainWindowModel/>
  </Design.DataContext>

  <StackPanel Orientation="Horizontal" Gap="8">
    <StackPanel>
      <TextBlock HorizontalAlignment="Center">Player 'X'</TextBlock>
      <controls:DropDown />
    </StackPanel>
    <StackPanel>
      <TextBlock Text=" Player 'O'"/>
      <controls:DropDown />
    </StackPanel>
  </StackPanel>

  
</Window>